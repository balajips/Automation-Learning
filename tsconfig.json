{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist/src",
        "lib": [
            "es2015", "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "common/*": [
                "./src/common/*"
            ]
        }
    },
    "include": [
        "./src/*", "./src/common/*", "./src/elements/*"
    ],
    "exclude": [
        "node_modules/**"
    ]
}